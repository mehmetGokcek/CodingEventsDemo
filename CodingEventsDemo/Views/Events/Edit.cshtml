<h1>Edit Event</h1>

<form method="post" action="/events/edit">

    <div class="form-group">

        <input type="hidden"  name="eventId" value="@ViewBag.eventToEdit.Id"/>


        <label>
            Name
            <input type="text" name="name" class="form-control" value="@ViewBag.eventToEdit.Name">
        </label>

        <label>
            Description
            <input type="text" name="description" class="form-control" value="@ViewBag.eventToEdit.Description">
        </label>

    </div>

    <input type="submit" value="Edit Event" />

</form>