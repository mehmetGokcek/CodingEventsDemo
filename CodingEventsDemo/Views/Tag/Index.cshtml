@using CodingEventsDemo.Models
@model List<Tag>

<h1>All Tags</h1>


@if (Model.Count == 0)
{
    <p>No Tag yet!</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Tag Id</th>
                <th scope="col">Tag Name</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var tag in Model)
            {
            <tr>
                <th scope="row">@tag.Id</th>
                <td><a asp-controller="Tag" asp-action="Detail" asp-route-id="@tag.Id">@tag.Name</a></td>
            </tr>
            }
           
        </tbody>
    </table>
}